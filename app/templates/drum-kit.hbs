{{page-title "Drum Kit"}}

<div class="drumKitContainer">
    <div class="drumKitKeyHolder" id="drumKitKeyHolder">
        <div data-key="65" class="drumKitKeys"><kbd>A</kbd><span class="sound">boom</span></div>
        <div data-key="83" class="drumKitKeys"><kbd>S</kbd><span class="sound">clap</span></div>
        <div data-key="68" class="drumKitKeys"><kbd>D</kbd><span class="sound">hihat</span></div>
        <div data-key="70" class="drumKitKeys"><kbd>F</kbd><span class="sound">kick</span></div>
        <div data-key="71" class="drumKitKeys"><kbd>G</kbd><span class="sound">openhat</span></div>
        <div data-key="72" class="drumKitKeys"><kbd>H</kbd><span class="sound">ride</span></div>
        <div data-key="74" class="drumKitKeys"><kbd>J</kbd><span class="sound">snare</span></div>
        <div data-key="75" class="drumKitKeys"><kbd>K</kbd><span class="sound">tink</span></div>
        <div data-key="76" class="drumKitKeys"><kbd>L</kbd><span class="sound">tom</span></div>
    </div>

    <div class="drumKitAudioHolder">
        <audio data-key="65" src="assets/audio/boom.wav" />
        <audio data-key="83" src="assets/audio/clap.wav" />
        <audio data-key="68" src="assets/audio/hihat.wav" />
        <audio data-key="70" src="assets/audio/kick.wav" />
        <audio data-key="71" src="assets/audio/openhat.wav" />
        <audio data-key="72" src="assets/audio/ride.wav" />
        <audio data-key="74" src="assets/audio/snare.wav" />
        <audio data-key="75" src="assets/audio/tink.wav" />
        <audio data-key="76" src="assets/audio/tom.wav" />
    </div>
</div>

<div {{did-insert this.addListeners}}></div>